<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/simpleDraweeView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@drawable/background_item"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCornerRadius="10dp" />

        <TextView
            android:id="@+id/layoutBannerHome_completeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_red_button_setting"
            android:drawableEnd="@drawable/ic_round_arrow_back_ios_new_10"
            android:drawableTint="@color/white"
            android:padding="8dp"
            android:text="اطلاعات بیشتر"
            android:fontFamily="@font/estedad_light"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/white"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/layoutBannerHome_trielrBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/background_border_white_button"
            android:padding="8dp"
            android:fontFamily="@font/estedad_light"
            android:text="مشاهده تریلر"
            android:textSize="13dp"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/layoutBannerHome_completeBtn"
            app:layout_constraintEnd_toStartOf="@+id/layoutBannerHome_completeBtn"
            app:layout_constraintTop_toTopOf="@+id/layoutBannerHome_completeBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>