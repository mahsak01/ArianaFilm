<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_margin="10dp"
        android:background="@drawable/background_text_view_descripation"
        android:backgroundTint="@color/transparent">

        <ImageView
            android:id="@+id/layoutAnswerTickets_avatorIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_circle_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/layoutAnswerTickets_authorTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="دیدگاه شما"
            android:fontFamily="@font/estedad_light"
            android:textColor="@color/white"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/layoutAnswerTickets_avatorIv"
            app:layout_constraintTop_toTopOf="@+id/layoutAnswerTickets_avatorIv" />

        <TextView
            android:id="@+id/layoutAnswerTickets_textTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="ادمین"
            android:fontFamily="@font/estedad_light"
            android:paddingBottom="16dp"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/layoutAnswerTickets_authorTv"
            app:layout_constraintTop_toBottomOf="@+id/layoutAnswerTickets_authorTv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>