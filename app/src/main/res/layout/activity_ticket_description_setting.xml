<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_screen"
        android:layoutDirection="rtl">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/background_transparent_item_setting"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ActivityTicketDescriptionSetting_backBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back1_setting"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/ActivityTicketDescriptionSetting_titletv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="تیکت"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:fontFamily="@font/estedad_light"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:padding="15dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/background_border_white_border"
                            android:backgroundTint="@color/yellow"
                            android:fontFamily="@font/estedad_light"
                            android:text="دپارتمان"
                            android:layout_margin="10dp"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/ActivityTicketDescriptionSetting_DepartmentTI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/background_border_white_border"
                            android:backgroundTint="@color/green"
                            android:fontFamily="@font/estedad_light"
                            android:text="پشتیبانی"
                            android:layout_margin="10dp"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/background_border_white_border"
                            android:backgroundTint="@color/yellow"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/estedad_light"
                            android:text="وضعیت"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/ActivityTicketDescriptionSetting_StatusTI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/background_border_white_border"
                            android:backgroundTint="@color/green"
                            android:fontFamily="@font/estedad_light"
                            android:layout_margin="10dp"
                            android:text="باز"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/background_border_white_border"
                            android:backgroundTint="@color/yellow"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/estedad_light"
                            android:text="تاریخ"
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/ActivityTicketDescriptionSetting_DateTI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:background="@drawable/background_border_white_border"
                            android:backgroundTint="@color/green"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/estedad_light"
                            android:text="5دی"
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/estedad_light"
                    android:layout_marginBottom="5dp"
                    android:text="موضوع"
                    android:textColor="@color/white"
                    android:textSize="14dp" />



                <EditText
                    android:id="@+id/ActivityTicketDescriptionSetting_titleTI"
                    style="Theme.ArianaFilm.AuthTheme.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_box_border"
                    android:drawablePadding="30dp"
                    android:editable="false"
                    android:focusable="false"
                    android:fontFamily="@font/estedad_light"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:popupBackground="@color/transparent"
                    android:textDirection="rtl" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="5dp"
                    android:text="پیام"
                    android:fontFamily="@font/estedad_light"
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/ActivityTicketDescriptionSetting_messageTI"
                    style="Theme.ArianaFilm.AuthTheme.EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_text_box_border"
                    android:drawablePadding="30dp"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="top"
                    android:fontFamily="@font/estedad_light"
                    android:minHeight="200dp"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    android:textDirection="rtl" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ActivityTicketDescriptionSetting_fileBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/estedad_light"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/edit_text_box_border"
                        android:drawableStart="@drawable/ic_round_attach_file_24"
                        android:drawablePadding="10dp"
                        android:padding="15dp"
                        android:text="پیوست فایل"
                        android:textColor="@color/white" />
                </FrameLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ActivityTicketDescriptionSetting_answerRv"
                    android:layout_width="match_parent"
                    android:layout_margin="15dp"
                    android:layout_height="wrap_content"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"

                    android:background="@drawable/edit_text_box_border"
                    android:minHeight="50dp">

                    <EditText
                        android:id="@+id/ActivityTicketDescriptionSetting_commentTI"
                        style="Theme.ArianaFilm.AuthTheme.EditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_box_border_no_color"
                        android:drawableTint="@color/white"
                        android:fontFamily="@font/estedad_light"
                        android:hint="پاسخ شما"
                        android:minHeight="50dp"
                        android:padding="15dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textDirection="rtl"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ActivityTicketDescriptionSetting_sendIv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_round_send_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/white" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>