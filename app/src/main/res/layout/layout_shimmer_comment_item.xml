<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:layout_margin="10dp"
        android:background="@drawable/background_button_setting"
        android:backgroundTint="@color/transparent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/layoutComments_avatorIv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_circle_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/layoutComments_authorTv"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/shimmer_placeholder"
            android:textColor="@color/white"
            android:textSize="13dp"
            app:layout_constraintStart_toEndOf="@+id/layoutComments_avatorIv"
            app:layout_constraintTop_toTopOf="@+id/layoutComments_avatorIv" />


        <TextView
            android:id="@+id/layoutComments_textTv"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/shimmer_placeholder"
            android:paddingBottom="16dp"
            android:textColor="@color/white"
            android:textDirection="rtl"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/layoutComments_authorTv"
            app:layout_constraintTop_toBottomOf="@+id/layoutComments_authorTv" />

       </androidx.constraintlayout.widget.ConstraintLayout>
</layout>